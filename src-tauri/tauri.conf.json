{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sonify",
  "version": "0.1.0",
  "identifier": "com.tikrack.sonify",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sonify",
        "minWidth": 800,
        "minHeight": 500,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/android-chrome-512x512.png",
      "icons/icon.ico"
    ]
  }
}
